<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_layout"
    android:padding="@dimen/padding_xxsmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/icon_image_view"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false"
        android:contentDescription="@string/tools_grid_icon_btn_description"
        android:layout_width="@dimen/tools_grid_icon_picker_button_height"
        android:layout_height="@dimen/tools_grid_icon_picker_button_height" />
</RelativeLayout>
