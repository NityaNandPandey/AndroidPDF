<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tools_digitalsignature_field_already_signed"
        android:id="@+id/tools_dialog_signatureinfo_infotext"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tools_dialog_signatureinfo_labels"
        android:layout_below="@+id/tools_dialog_signatureinfo_infotext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_digitalsignature_location"
            android:id="@+id/tools_dialog_signatureinfo_label_location"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_digitalsignature_reason"
            android:id="@+id/tools_dialog_signatureinfo_label_reason"
            android:layout_below="@+id/tools_dialog_signatureinfo_label_location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_digitalsignature_name"
            android:id="@+id/tools_dialog_signatureinfo_label_name"
            android:layout_below="@+id/tools_dialog_signatureinfo_label_reason"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tools_dialog_signatureinfo_infotext"
        android:layout_toRightOf="@+id/tools_dialog_signatureinfo_labels"
        android:layout_toEndOf="@+id/tools_dialog_signatureinfo_labels"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_digitalsignature_location"
            android:id="@+id/tools_dialog_signatureinfo_location"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_digitalsignature_reason"
            android:id="@+id/tools_dialog_signatureinfo_reason"
            android:layout_below="@+id/tools_dialog_signatureinfo_location"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tools_digitalsignature_name"
            android:id="@+id/tools_dialog_signatureinfo_name"
            android:layout_below="@+id/tools_dialog_signatureinfo_reason"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</RelativeLayout>