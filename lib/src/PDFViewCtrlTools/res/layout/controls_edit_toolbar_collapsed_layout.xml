<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/action_button_min_padding"
    android:layout_marginBottom="@dimen/action_button_min_padding"
    android:background="?attr/controlBackground"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/controls_edit_toolbar_style_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_style1"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_style1"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_style1"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_annotation_freehand_black_24dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_style2"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_style2"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_style2"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_annotation_freehand_black_24dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_style3"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_style3"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_style3"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_annotation_freehand_black_24dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_style4"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_style4"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_style4"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_annotation_freehand_black_24dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_style5"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:layout_gravity="center_vertical"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_style5"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_style5"
            android:scaleType="center"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_annotation_freehand_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/controls_edit_toolbar_control_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_clear"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_clear"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_clear"
            android:scaleType="center" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_eraser"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:contentDescription="@string/controls_annotation_toolbar_tool_description_eraser"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_eraser"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_eraser"
            android:scaleType="center"
            android:visibility="visible" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_undo"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:contentDescription="@string/undo"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_undo"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_undo"
            android:scaleType="center" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_redo"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:contentDescription="@string/redo"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_redo"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_redo"
            android:scaleType="center" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@id/controls_edit_toolbar_tool_close"
            android:layout_width="@dimen/quick_menu_button_size"
            android:layout_height="@dimen/quick_menu_button_size"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center"
            android:maxWidth="@dimen/controls_edit_toolbar_style_width"
            android:nextFocusLeft="@id/controls_edit_toolbar_tool_close"
            android:nextFocusRight="@id/controls_edit_toolbar_tool_close"
            android:scaleType="center" />

    </LinearLayout>

</LinearLayout>
